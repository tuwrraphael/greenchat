{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "outDir": "./dist/",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "module": "esnext",
    "target": "esnext",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "types": [
      "@types/jasmine",
      "@types/node",
      "@types/webpack-env"
    ],
    "allowSyntheticDefaultImports": true
  },
}